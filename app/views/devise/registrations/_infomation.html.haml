.how-pos2.p-lr-15-md
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, class: 'col-sm-3 control-label text-bold'
      .col-sm-9
        = f.email_field :email, autofocus: true, class: 'form-control', value: current_user.email, disabled: "disabled"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
    .form-group
      = f.label :username, class: 'col-sm-3 control-label text-bold'
      .col-sm-9
        = f.text_field :username, class: 'form-control', value: current_user.username.present? ? current_user.username : ""
    .form-group
      = f.label :phone, class: 'col-sm-3 control-label text-bold text-bold'
      .col-sm-9
        = f.text_field :phone, class: 'form-control', value: current_user.phone
    .form-group
      = f.label :password, class: 'col-sm-3 control-label text-bold'
      .col-sm-9
        = f.password_field :password, autocomplete: 'off', class: 'form-control'
        %p.help-block
          %span.text-red
            *
          %i
            = I18n.t("pass_noti")
    .form-group
      = f.label :password_confirmation, class: 'col-sm-3 control-label text-bold'
      .col-sm-9
        = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
    .form-group
      = f.label :current_password, class: 'col-sm-3 control-label text-bold'
      .col-sm-9
        = f.password_field :current_password, autocomplete: 'off', class: 'form-control'
        %p.help-block
          %span.text-red
            *
          %i
            = I18n.t("pass_confirm_noti")
    %center
      %div
        = f.submit 'Update', class: 'btn btn-primary'
:css
  .text-red {
    color: red;
  }
