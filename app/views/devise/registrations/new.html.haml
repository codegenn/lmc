.main-page.bg-img1.txt-center.p-lr-15.p-tb-92.about
  %h2.ltext-105.cl0.txt-center
    = I18n.t "user.signup"
%section.bg0.p-t-104.p-b-116
  .container
    .flex-w.flex-tr
      .size-217.bor10.p-lr-70.p-t-55.p-b-70.p-lr-15-lg.w-full-md
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .field
            = f.label :email, I18n.t("user.email")
            .bor8.m-b-20.how-pos4-parent
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :password, I18n.t("user.password")
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            .bor8.m-b-20.how-pos4-parent
              = f.password_field :password, autocomplete: "new-password", class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :password_confirmation, I18n.t("user.password_confirmation")
            .bor8.m-b-20.how-pos4-parent
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :first_name, I18n.t("user.first_name")
            .bor8.m-b-20.how-pos4-parent
              = f.text_field :first_name, class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :last_name, I18n.t("user.last_name")
            .bor8.m-b-20.how-pos4-parent
              = f.text_field :last_name, class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :phone, I18n.t("user.phone")
            .bor8.m-b-20.how-pos4-parent
              = f.text_field :phone, class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .actions
            = f.submit I18n.t("user.signup"), class: 'flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer'
        = render "devise/shared/links"




