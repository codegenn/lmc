.main-page.bg-img1.txt-center.p-lr-15.p-tb-92.about
  %h2.ltext-105.cl0.txt-center
    = I18n.t "user.signin"
%section.bg0.p-t-104.p-b-116
  .container
    .flex-w.flex-tr
      .size-217.bor10.p-lr-70.p-t-55.p-b-70.p-lr-15-lg.w-full-md
        - flash.each do |key, value|
          = content_tag :div, value, class: "alert alert-#{key}"
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.label :email, I18n.t("user.email")
            .bor8.m-b-20.how-pos4-parent
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'stext-111 cl2 plh3 size-116 p-l-20'
          .field
            = f.label :password, I18n.t("user.password")
            .bor8.m-b-20.how-pos4-parent
              = f.password_field :password, autocomplete: "current-password", class: 'stext-111 cl2 plh3 size-116 p-l-20'
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
          .actions
            = submit_tag I18n.t("user.submit"), class: 'flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer'
        = render "devise/shared/links"

