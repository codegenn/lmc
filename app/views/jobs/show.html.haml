.sec-banner.bg0.p-t-80.p-b-50.main-page
  .container
    .bg0.p-t-75.p-b-85
      .container
        .row
          .col-lg-10.col-xl-7.m-lr-auto.m-b-50
            .m-l-25.m-r--38.m-lr-0-xl
              .wrap-table-shopping-cart.bor10
                .flex-w.flex-sb-m.p-t-18.p-b-15.p-lr-40.p-lr-15-sm
                  .ltext-109.cl2.p-b-28
                    = @job.title
                .flex-w.flex-sb-m.p-t-18.p-b-15.p-lr-40.p-lr-15-sm
                  = @job.content
            .m-l-25.m-r--38.m-lr-0-xl
              = form_for(@application) do |f|
                .wrap-table-shopping-cart
                  - flash.each do |key, value|
                    = content_tag :div, value, class: "alert alert-#{key}"
                  .flex-w.flex-sb-m.bor15.p-t-18.p-b-15.p-lr-40.p-lr-15-sm
                    = f.label :name, class: 'col-sm-3 control-label'
                    = f.text_field :name, autofocus: true, class: 'stext-111 cl2 plh3 size-126'
                    = f.label :email, class: 'col-sm-3 control-label'
                    = f.text_field :email, autofocus: true, class: 'stext-111 cl2 plh3 size-126'
                    = f.label :phone_number, class: 'col-sm-3 control-label'
                    = f.text_field :phone_number, autofocus: true, class: 'stext-111 cl2 plh3 size-126'
                    = f.hidden_field :job_id, value: "#{@job.id}", class: 'stext-111 cl2 plh3 size-126'
                    = f.label :cv, 'Upload CV', class: 'col-sm-3 control-label'
                    = f.file_field :cv, class: 'stext-111 cl2 plh3 size-126'
                    = submit_tag 'Apply', class: 'flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer'