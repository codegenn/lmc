:javascript
  $(".susimg1").click(function() {
    $('#susimg1').modal('show');
    console.log('#{I18n.t("page.foundation.empowerment")}')
  })
  function suspopup(title, content) {
    let modal = $("#susimg")
    let header = $(modal).find(".modal-title")
    let body = $(modal).find(".modal-body")
    $(header).text(title)
    $(body).text(content)
    $('#susimg').modal('show');
  }

