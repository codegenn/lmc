:css
  .card-title {
    height: 120px; /* Adjust the height as needed */
  }
  .float {
    float: right;
  }
.col-sm-6.col-md-4.col-lg-3.pb-5.isotope-item.women
  .card.h-100
    .block2
      .block2-pic.hov-img0
        = link_to product_path(product.slug) do
          = cl_image_tag product.product_images.first.try(:image_url), alt: "#{product.title}", title: "#{product.title}", class: "card-img-top"
      .card-body
        .card-title
          = link_to product_path(product.slug), :"data-no-turbolink" => 'false', class: "stext-301 cl2 hov-cl1 trans-04 js-name-b2 card-title" do
            = product.title
        .card-text
          %div{class: ('row' if product.product_sold&.sold.present?)}
            %div{class: ("col-6 p-0" if product.product_sold&.sold.present?)}
              - if product.promotion_price.present?
                %span.promotion-price
                  = "#{number_with_delimiter(product.price.to_i, :delimiter => '.')} VND"
                %b
                  = "#{number_with_delimiter(product.promotion_price.to_i, :delimiter => '.')} VND"
              - else
                = "#{number_with_delimiter(product.price.to_i, :delimiter => '.')} VND"
              .stext-105.cl3
                - count = product.stocks.map(&:color).uniq.count
                - if count == 1
                  = I18n.t("page.product.single_colour")
                - else
                  = I18n.t("page.product.other_colour_count", count: count)
            %div{class: ("col-6 p-0" if product.product_sold&.sold.present?)}
              - if product.product_sold&.sold.present?
                .text-right.font-weight-bold
                  = "#{ I18n.t("sold") } #{ product.product_sold.sold }"
            .stext-105.cl3.review
              = render "layouts/star", review: product.star_rating, sold: nil, review_count: nil
        - if product.has_promotion
          .block2-txt-promo.flex-col-l.bor10
            %p.card-text.mtext-103.cl3.promotion
              = product.promotion
