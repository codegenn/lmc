      </td>
      <td style="width: 250px">
        <div>
          <%= link_to admin_products_path(product.id) do %>
            <%= product.title %>
          <% end %>
        </div>
        <div>
          <%= I18n.t("partner.price") %>
          <%= number_to_currency(product.price, unit: "Ä‘",  format: "%n %u") %>
        </div>
        <div>
          <%= I18n.t("partner.size") %>
          <%= product.list_size %>
        </div>
      </td>
    </tr>
  </tbody>
</table>