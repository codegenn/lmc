:css
  .partner-btn {
    margin: 100px 0 20px 0;
    width: 50%;
  }
  .partner-container-2 {
    margin-top: 100px
  }
  .partner-container-2 h3 {
    font-weight: 500; 
    padding-top: 100px;
  }
  .partner-box1 {
    padding-top: 50%
  }
  .partner-box2 {
    padding-top: 100%
  }
  @media (max-width: 575px) {
    .partner-btn {
      width: 100%;
      margin: 30px 0 20px 0;
    }
    .partner-sign-in {
      margin-bottom: 30px;
    }
    .partner-container-2 {
      margin-top: 20px
    }
    .partner-container-2 h3, {
      padding-top: 30px;
    }
    .partner-box1, .partner-box2 {
      padding-top: 10%
    }
    .reverse {
      display: flex;
      flex-direction: column-reverse;
    }
    .reverse img {
      padding: 15px;
    }
  }